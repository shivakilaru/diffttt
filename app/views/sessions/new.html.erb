<h1>Sign In</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br/>
	
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br/>
	
	<%= f.submit "Sign In" %>
	<br/>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>

<%= link_to 'Back', root_url %>