<div>
	<%= form_for(@diff) do |f| %>

	  
	<% if @diff.errors.any? %>
		<div id="error_explanation">
			<div class="alert alert-error">
			The form contains <%= pluralize(@diff.errors.count, "error") %>.
			</div>
			<ul>
				<% @diff.errors.full_messages.each do |msg| %>
				<li>* <%= msg %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>

	  <%= f.label :name %>
	  <%= f.text_field :name %>
	  <br/>

	  <%= f.label :url %>
	  <%= f.text_field :url %>
	  <br/>

	  <%= f.label :div %>
	  <%= f.text_field :div %>
	  <br/>

	  <%= f.submit "Create my diff" %>
	  <br/>
	<% end %>
	
	
</div>
